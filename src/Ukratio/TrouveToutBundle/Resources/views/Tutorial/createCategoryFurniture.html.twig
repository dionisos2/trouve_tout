{% extends "TrouveToutBundle:Tutorial:layout.html.twig" %}

{% block title %}
  {{ parent() }} - {{ 'title.create_category_furniture' | trans }}
{% endblock %}

{% block title_header %}
  {{ parent() }} - {{ 'tutorial.summary.create_category_1' | trans({}, 'tutorial') }}
{% endblock %}

{% block TrouveTout %}
{{ parent() }}

<section>
  <p>{{ 'tutorial.create_category_furniture.goal' | trans({}, 'tutorial') }}</p>
  <p>{{ 'tutorial.create_category_furniture.characteristic' | trans({}, 'tutorial') }}</p>
  <p>{{ 'tutorial.create_category_furniture.composition' | trans({}, 'tutorial') }}</p>
  <ul>
    <li> <p>{{ 'tutorial.create_category_furniture.composition_picture' | trans({}, 'tutorial') }}</p> </li>
    <li> <p>{{ 'tutorial.create_category_furniture.composition_localization' | trans({}, 'tutorial') }}</p> </li>
  </ul>

  <p>{{ 'tutorial.create_category_furniture.four_step' | trans({}, 'tutorial') }}</p>
  <ul>
    <li> <p>{{ 'tutorial.create_category_furniture.step_name' | trans({}, 'tutorial') }}</p> </li>
    <li> <p>{{ 'tutorial.create_category_furniture.step_image' | trans({}, 'tutorial') }}</p> </li>
    <li> <p>{{ 'tutorial.create_category_furniture.step_localization' | trans({}, 'tutorial') }}</p> </li>
    <li> <p>{{ 'tutorial.create_category_furniture.step_send' | trans({}, 'tutorial') }}</p> </li>
  </ul>
</section>

<section class="tuto-simulation">
  {% set link = {'button': '', 'target': '' } %}
  {% include 'TrouveToutBundle:Tutorial:menu.html.twig' with {'link': link} %}
  <h2>{{ 'title.add_category' | trans }}</h2>
  {% include "TrouveToutBundle:TrouveTout:CategoryForm.html.twig" %}
</section>

{% endblock %}

