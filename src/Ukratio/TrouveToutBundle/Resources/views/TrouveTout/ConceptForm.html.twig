<div class="well">
  <form method="post" {{ form_enctype(form) }}>
    {% block specific %}{% endblock %}
    
    
    {% if ((concept.type == 'Research') and (concept.id == 0)) %}
    <input type="submit" name="run" class="fix2 btn btn-primary" value="{{ 'research.run' | trans }}" />
    {% endif %}

    {% if app.user %}
      {% if concept.type == 'Research' %}
      <input type="submit" name="save" class="fix btn btn-primary" value="{{ 'research.save_and_run' | trans }}" />
      {% else %}
      <input type="submit" name="save" class="fix btn btn-primary" value="{{ 'Send' | trans }}" />
      {% endif %}
    {% endif %}
    
    {% if concept.id != 0 %}
    <a href="{{ path('delete_concept', {id: concept.id})}}" class="fix3 btn btn-primary" value="delete">
      {{ 'Delete' | trans }}
    </a>
    {% endif %}

    <h3>{{ 'Categories' | trans }}</h3>
    <ul class="categories" data-prototype="{{ form_widget(form.moreGeneralConceptConcepts.vars.prototype)|e }}">
      <a id="concept_all"></a>
      {% for category in form.moreGeneralConceptConcepts %}
      <li class="category">
        {{ form_errors(category) }}
        {{ form_widget(category) }}
      </li>
      <hr class="separation">
      {% endfor %}
    </ul>

    <h3>{{ 'Caracts' | trans }}</h3>
    <ul class="caracts" data-prototype="{{ form_widget(form.caracts.vars.prototype)|e }}">
      {% for caract in form.caracts %}
      <li class="caract">
        <a id="caract_{{caract.vars.value.id}}"></a>
        {{ form_errors(caract) }}
        {{ form_widget(caract) }}
      </li>
      <hr class="separation">
      {% endfor %}
    </ul>

    {{ form_rest(form) }}
    {{ form_errors(form) }}

  </form>
</div>