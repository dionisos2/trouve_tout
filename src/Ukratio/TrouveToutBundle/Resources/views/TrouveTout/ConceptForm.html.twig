<div class="well">
  <form method="post" {{ form_enctype(form) }}>
    {{ form_row(form.type) }}
    {% block specific %}{% endblock %}
    <input type="submit" class="fix btn btn-primary" value="envoyer" />

    <h3>Caracts</h3>
    <ul class="caracts" data-prototype="{{ form_widget(form.caracts.vars.prototype)|e }}">
      {% for caract in form.caracts %}
      <hr class="separation">
      <li class="caract">
        <a id="caract_{{caract.vars.value.id}}"></a>
        {{ form_errors(caract) }}
        {{ form_widget(caract) }}

        <a href="#caract_{{caract.vars.value.id}}">
          <p class="btn btn-primary">fixer</p>
        </a>
      </li>
      {% endfor %}
    </ul>

    <h3>Categories</h3>
    <ul class="concepts" data-prototype="{{ form_widget(form.moreGeneralConceptConcepts.vars.prototype)|e }}">
      <a id="concept_all"></a>
      <a href="#concept_all">
        <p class="btn btn-primary">fixer</p>
      </a>
      {% for concept in form.moreGeneralConceptConcepts %}
      <hr class="separation">
      <li class="concept">
        {{ form_errors(concept) }}
        {{ form_widget(concept) }}
      </li>
      {% endfor %}
    </ul>

    {{ form_rest(form) }}
    {{ form_errors(form) }}

  </form>
</div>
